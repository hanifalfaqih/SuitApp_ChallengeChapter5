<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text.18.Blue"
        android:padding="12dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_result"/>

    <TextView
        android:id="@+id/tv_result_winner"
        style="@style/Text.36.Pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result"
        tools:text="@string/text_result" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_reset"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bg_btn_red_16dp"
        android:src="@drawable/ic_restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_winner" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_main_menu"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bg_btn_grey_16dp"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/ic_main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_winner" />

</androidx.constraintlayout.widget.ConstraintLayout>